    <div class="container">
        <h1>⛳ ゴルフアドレス診断ツール</h1>
        
        <div class="upload-section">
            <input type="file" class="file-input" id="image-input" accept="image/*">
            <button class="upload-btn" onclick="document.getElementById('image-input').click()">
                📷 写真をアップロード
            </button>
            <p style="margin-top: 15px; color: #666;">
                アドレス時の写真をアップロードしてください
            </p>
        </div>
        
        <div id="message"></div>
        
        <div class="settings">
            <div class="setting-group">
                <label for="handedness">利き手</label>
                <select id="handedness">
                    <option value="right">右打ち</option>
                    <option value="left">左打ち</option>
                </select>
            </div>
            <div class="setting-group">
                <label for="club-type">クラブ</label>
                <select id="club-type">
                    <option value="Driver">ドライバー</option>
                    <option value="7I">7アイアン</option>
                    <option value="9I">9アイアン</option>
                    <option value="PW">ピッチングウェッジ</option>
                </select>
            </div>
        </div>
        
        <div id="preview" class="preview hidden">
            <img id="preview-image" alt="プレビュー">
            <br><br>
            <button class="btn" onclick="analyze()">🤖 AI診断開始</button>
            <button class="btn btn-danger" onclick="clearImage()">🗑️ クリア</button>
        </div>
        
        <div id="result" class="result hidden">
            <h2>📊 診断結果</h2>
            <div class="score" id="total-score">--</div>
            <div id="detailed-results"></div>
        </div>
    </div>

    <script>
        // 画像アップロード処理
        document.getElementById('image-input').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview-image').src = e.target.result;
                    document.getElementById('preview').classList.remove('hidden');
                    document.getElementById('result').classList.add('hidden');
                    showMessage('画像のアップロードが完了しました！', 'success');
                };
                reader.readAsDataURL(file);
            } else {
                showMessage('画像ファイルを選択してください', 'error');
            }
        });

        // AI診断シミュレーション
        function analyze() {
            showMessage('AI診断を実行中...', 'success');
            
            setTimeout(function() {
                const club = document.getElementById('club-type').value;
                const handedness = document.getElementById('handedness').value;
                
                // スコア生成
                const baseScore = 75 + Math.floor(Math.random() * 20);
                const evaluations = generateEvaluations(club, handedness);
                
                // 結果表示
                document.getElementById('total-score').textContent = baseScore + '点';
                document.getElementById('detailed-results').innerHTML = evaluations;
                document.getElementById('result').classList.remove('hidden');
                
                showMessage('診断が完了しました！', 'success');
            }, 2000);
        }

        // 評価結果生成
        function generateEvaluations(club, handedness) {
            const evaluations = [
                { name: 'ボール位置', score: 85 + Math.floor(Math.random() * 10) },
                { name: 'スタンス幅', score: 80 + Math.floor(Math.random() * 15) },
                { name: '前傾角度', score: 75 + Math.floor(Math.random() * 20) },
                { name: '重心バランス', score: 70 + Math.floor(Math.random() * 25) },
                { name: '手の位置', score: 80 + Math.floor(Math.random() * 15) }
            ];

            let html = '<div class="evaluation">';
            evaluations.forEach(eval => {
                const scoreClass = eval.score >= 85 ? 'score-excellent' : 
                                 eval.score >= 70 ? 'score-good' : 'score-poor';
                html += `
                    <div class="eval-item">
                        <h3>${eval.name}</h3>
                        <div class="eval-score ${scoreClass}">${eval.score}点</div>
                        <p>${getComment(eval.name, eval.score)}</p>
                    </div>
                `;
            });
            html += '</div>';
            return html;
        }

        // コメント生成
        function getComment(category, score) {
            if (score >= 85) return '✨ 素晴らしい！理想的です';
            if (score >= 70) return '👍 良好です。わずかな調整で完璧に';
            return '⚠️ 改善の余地があります';
        }

        // 画像クリア
        function clearImage() {
            document.getElementById('image-input').value = '';
            document.getElementById('preview').classList.add('hidden');
            document.getElementById('result').classList.add('hidden');
            showMessage('画像がクリアされました', 'success');
        }

        // メッセージ表示
        function showMessage(text, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = `<div class="message ${type}">${text}</div>`;
            setTimeout(() => messageDiv.innerHTML = '', 3000);
        }

        // 初期化
        showMessage('ゴルフアドレス診断ツールへようこそ！', 'success');
    </script>
</body>
